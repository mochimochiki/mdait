{
  "name": "mdait",
  "displayName": "mdait",
  "description": "%mdait.description%",
  "version": "0.0.1",
  "publisher": "mochimochiki",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mochimochiki/mdait.git"
  },
  "l10n": "./l10n",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdait.sync",
        "title": "%mdait.sync.title%"
      },
      {
        "command": "mdait.status.selectTargets",
        "title": "%mdait.status.selectTargets.title%",
        "icon": "$(filter)",
        "category": "mdait"
      },
      {
        "command": "mdait.trans",
        "title": "%mdait.trans.title%"
      },
      {
        "command": "mdait.status.sync",
        "title": "%mdait.status.sync.title%",
        "icon": "$(sync)",
        "category": "mdait"
      },
      {
        "command": "mdait.status.sync.processing",
        "title": "%mdait.status.sync.title%",
        "icon": "$(sync~spin)",
        "category": "mdait"
      },
      {
        "command": "mdait.translate.directory",
        "title": "%mdait.translate.directory.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.translate.file",
        "title": "%mdait.translate.file.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.translate.unit",
        "title": "%mdait.translate.unit.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.jumpToSource",
        "title": "%mdait.jumpToSource.title%",
        "icon": "$(link-external)",
        "category": "mdait"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdait",
          "title": "%mdait.viewsContainer.title%",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "mdait": [
        {
          "id": "mdait.status",
          "icon": "$(check)",
          "name": "%mdait.status.view.title%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mdait.status.selectTargets",
          "when": "view == mdait.status",
          "group": "navigation@-1"
        },
        {
          "command": "mdait.status.sync",
          "when": "view == mdait.status && !mdaitSyncProcessing",
          "group": "navigation"
        },
        {
          "command": "mdait.status.sync.processing",
          "when": "view == mdait.status && mdaitSyncProcessing",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mdait.translate.directory",
          "when": "view == mdait.status && viewItem == mdaitDirectory",
          "group": "inline"
        },
        {
          "command": "mdait.translate.file",
          "when": "view == mdait.status && viewItem == mdaitFile",
          "group": "inline"
        },
        {
          "command": "mdait.jumpToSource",
          "when": "view == mdait.status && viewItem == mdaitFile",
          "group": "inline"
        },
        {
          "command": "mdait.translate.unit",
          "when": "view == mdait.status && viewItem == mdaitUnit",
          "group": "inline"
        },
        {
          "command": "mdait.jumpToSource",
          "when": "view == mdait.status && viewItem == mdaitUnit",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "%mdait.configuration.title%",
      "properties": {
        "mdait.transPairs": {
          "type": "array",
          "description": "%mdait.transPairs.description%",
          "default": [],
          "items": {
            "type": "object",
            "title": "%mdait.transPairs.title%",
            "properties": {
              "sourceDir": {
                "type": "string",
                "description": "%mdait.transPairs.sourceDir.description%"
              },
              "targetDir": {
                "type": "string",
                "description": "%mdait.transPairs.targetDir.description%"
              }
            },
            "required": [
              "sourceDir",
              "targetDir"
            ]
          }
        },
        "mdait.ignoredPatterns": {
          "type": "array",
          "default": [],
          "description": "%mdait.ignoredPatterns.description%",
          "items": {
            "type": "string"
          }
        },
        "mdait.sync.autoDelete": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.sync.autoDelete.description%"
        },
        "mdait.trans.provider": {
          "type": "string",
          "default": "default",
          "description": "%mdait.trans.provider.description%"
        },
        "mdait.trans.markdown.skipCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.trans.markdown.skipCodeBlocks.description%"
        },
        "mdait.trans.ollama.endpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "%mdait.trans.ollama.endpoint.description%"
        },
        "mdait.trans.ollama.model": {
          "type": "string",
          "default": "llama2",
          "description": "%mdait.trans.ollama.model.description%"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "biome lint ./src",
    "test": "npm run test:unit",
    "test:unit": "npm run compile && npm run lint && mocha --ui tdd out/test/core/hash/*.test.js out/test/core/markdown/mdait-unit.test.js out/test/core/markdown/mdait-marker.test.js",
    "test:vscode": "rimraf out/test-gui && npm run compile && npm run lint && vscode-test",
    "watch": "tsc -watch -p ./",
    "copy-test-files": "rimraf ./src/test/workspace/content && node -e \"require('node:fs').cpSync('./src/test/sample-content', './src/test/workspace/content', { recursive: true, force: true })\"",
    "l10n": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "l10n-validate": "npx @vscode/l10n-dev validate ./l10n"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "ollama": "^0.5.16"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/markdown-it": "^14.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.73.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^11.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
