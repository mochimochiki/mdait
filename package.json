{
  "name": "mdait",
  "displayName": "mdait",
  "description": "%mdait.description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "l10n": "./l10n",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdait.sync",
        "title": "%mdait.sync.title%"
      },
      {
        "command": "mdait.trans",
        "title": "%mdait.trans.title%"
      },
      {
        "command": "mdait.chat",
        "title": "%mdait.chat.title%"
      }
    ],
    "configuration": {
      "title": "%mdait.configuration.title%",
      "properties": {
        "mdait.transPairs": {
          "type": "array",
          "description": "%mdait.transPairs.description%",
          "default": [],
          "items": {
            "type": "object",
            "title": "%mdait.transPairs.title%",
            "properties": {
              "sourceDir": {
                "type": "string",
                "description": "%mdait.transPairs.sourceDir.description%"
              },
              "targetDir": {
                "type": "string",
                "description": "%mdait.transPairs.targetDir.description%"
              }
            },
            "required": [
              "sourceDir",
              "targetDir"
            ]
          }
        },
        "mdait.ignoredPatterns": {
          "type": "array",
          "default": [],
          "description": "%mdait.ignoredPatterns.description%",
          "items": {
            "type": "string"
          }
        },
        "mdait.sync.autoDelete": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.sync.autoDelete.description%"
        },
        "mdait.trans.provider": {
          "type": "string",
          "default": "default",
          "description": "%mdait.trans.provider.description%"
        },
        "mdait.trans.markdown.skipCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.trans.markdown.skipCodeBlocks.description%"
        },
        "mdait.trans.ollama.endpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "%mdait.trans.ollama.endpoint.description%"
        },
        "mdait.trans.ollama.model": {
          "type": "string",
          "default": "llama2",
          "description": "%mdait.trans.ollama.model.description%"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "biome lint ./src",
    "test": "rimraf out/test && npm run compile && npm run lint && vscode-test",
    "watch": "tsc -watch -p ./",
    "copy-test-files": "node -e \"require('node:fs').cpSync('./src/test/sample-content', './src/test/workspace/content', { recursive: true, force: true })\"",
    "l10n": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "l10n-validate": "npx @vscode/l10n-dev validate ./l10n"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "ollama": "^0.5.16"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/markdown-it": "^14.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.73.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^11.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
