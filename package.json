{
  "name": "mdait",
  "displayName": "mdait",
  "description": "%mdait.description%",
  "version": "0.0.1",
  "publisher": "mochimochiki",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mochimochiki/mdait.git"
  },
  "l10n": "./l10n",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdait.sync",
        "title": "%mdait.sync.title%"
      },
      {
        "command": "mdait.trans",
        "title": "%mdait.trans.title%"
      },
      {
        "command": "mdait.translate.directory",
        "title": "%mdait.translate.directory.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.translate.file",
        "title": "%mdait.translate.file.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.translate.unit",
        "title": "%mdait.translate.unit.title%",
        "icon": "$(play)",
        "category": "mdait"
      },
      {
        "command": "mdait.term.detect",
        "title": "%mdait.term.detect.title%",
        "icon": "$(repo)",
        "category": "mdait"
      },
      {
        "command": "mdait.term.detect.directory",
        "title": "%mdait.term.detect.directory.title%",
        "icon": "$(repo)",
        "category": "mdait"
      },
      {
        "command": "mdait.term.detect.file",
        "title": "%mdait.term.detect.file.title%",
        "icon": "$(repo)",
        "category": "mdait"
      },
      {
        "command": "mdait.term.expand",
        "title": "%mdait.term.expand.title%",
        "icon": "$(repo-clone)",
        "category": "mdait"
      },
      {
        "command": "mdait.status.selectTargets",
        "title": "%mdait.status.selectTargets.title%",
        "icon": "$(filter)",
        "category": "mdait"
      },
      {
        "command": "mdait.status.sync",
        "title": "%mdait.status.sync.title%",
        "icon": "$(sync)",
        "category": "mdait"
      },
      {
        "command": "mdait.status.sync.processing",
        "title": "%mdait.status.sync.title%",
        "icon": "$(sync~spin)",
        "category": "mdait"
      },
      {
        "command": "mdait.status.openTerm",
        "title": "%mdait.status.openTerm.title%",
        "icon": "$(repo)",
        "category": "mdait"
      },
      {
        "command": "mdait.setup.createSettings",
        "title": "%mdait.setup.createSettings.title%",
        "icon": "$(gear)",
        "category": "mdait"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdait",
          "title": "%mdait.viewsContainer.title%",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "mdait": [
        {
          "id": "mdait.status",
          "icon": "$(check)",
          "name": "%mdait.status.view.title%",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mdait.status",
        "contents": "%mdait.welcome.noSettings.message%\n[$(gear) %mdait.setup.createSettings.title%](command:mdait.setup.createSettings)",
        "when": "workspaceFolderCount != 0 && !mdaitConfigured"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mdait.status.selectTargets",
          "when": "view == mdait.status && mdaitConfigured",
          "group": "navigation@-1"
        },
        {
          "command": "mdait.status.sync",
          "when": "view == mdait.status && mdaitConfigured && !mdaitSyncProcessing",
          "group": "navigation"
        },
        {
          "command": "mdait.status.sync.processing",
          "when": "view == mdait.status && mdaitConfigured && mdaitSyncProcessing",
          "group": "navigation"
        },
        {
          "command": "mdait.status.openTerm",
          "when": "view == mdait.status && mdaitConfigured",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mdait.translate.directory",
          "when": "view == mdait.status && viewItem == mdaitDirectoryTarget",
          "group": "inline"
        },
        {
          "command": "mdait.translate.file",
          "when": "view == mdait.status && viewItem == mdaitFileTarget",
          "group": "inline"
        },
        {
          "command": "mdait.translate.unit",
          "when": "view == mdait.status && viewItem == mdaitUnitTarget",
          "group": "inline"
        },
        {
          "command": "mdait.term.detect.directory",
          "when": "view == mdait.status && viewItem == mdaitDirectorySource",
          "group": "inline@1"
        },
        {
          "command": "mdait.term.detect.file",
          "when": "view == mdait.status && viewItem == mdaitFileSource",
          "group": "inline@1"
        },
        {
          "command": "mdait.term.expand",
          "when": "view == mdait.status && viewItem == mdaitDirectoryTarget",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "%mdait.configuration.title%",
      "properties": {
        "mdait.transPairs": {
          "type": "array",
          "description": "%mdait.transPairs.description%",
          "default": [],
          "items": {
            "type": "object",
            "title": "%mdait.transPairs.title%",
            "properties": {
              "sourceDir": {
                "type": "string",
                "description": "%mdait.transPairs.sourceDir.description%"
              },
              "targetDir": {
                "type": "string",
                "description": "%mdait.transPairs.targetDir.description%"
              }
            },
            "required": [
              "sourceDir",
              "targetDir"
            ]
          }
        },
        "mdait.ignoredPatterns": {
          "type": "array",
          "default": [],
          "description": "%mdait.ignoredPatterns.description%",
          "items": {
            "type": "string"
          }
        },
        "mdait.sync.autoDelete": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.sync.autoDelete.description%"
        },
        "mdait.ai.provider": {
          "type": "string",
          "default": "default",
          "description": "%mdait.ai.provider.description%"
        },
        "mdait.ai.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "%mdait.ai.model.description%"
        },
        "mdait.ai.ollama.endpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "%mdait.ai.ollama.endpoint.description%"
        },
        "mdait.ai.ollama.model": {
          "type": "string",
          "default": "llama2",
          "description": "%mdait.ai.ollama.model.description%"
        },
        "mdait.ai.debug.enableStatsLogging": {
          "type": "boolean",
          "default": false,
          "description": "%mdait.ai.debug.enableStatsLogging.description%"
        },
        "mdait.ai.debug.logPromptAndResponse": {
          "type": "boolean",
          "default": false,
          "description": "%mdait.ai.debug.logPromptAndResponse.description%"
        },
        "mdait.trans.markdown.skipCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "%mdait.trans.markdown.skipCodeBlocks.description%"
        },
        "mdait.terms.filename": {
          "type": "string",
          "default": "terms.csv",
          "description": "%mdait.terms.filename.description%"
        },
        "mdait.terms.primaryLang": {
          "type": "string",
          "default": "",
          "description": "%mdait.terms.primaryLang.description%"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "biome lint ./src",
    "test": "npm run test:unit",
    "test:unit": "npm run compile && npm run lint && mocha --ui tdd out/test/core/hash/*.test.js out/test/core/markdown/mdait-unit.test.js out/test/core/markdown/mdait-marker.test.js",
    "test:vscode": "rimraf out/test-gui && npm run compile && npm run lint && vscode-test",
    "watch": "tsc -watch -p ./",
    "copy-test-files": "rimraf ./src/test/workspace/content && node -e \"require('node:fs').cpSync('./src/test/sample-content', './src/test/workspace/content', { recursive: true, force: true })\"",
    "l10n": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "l10n-validate": "npx @vscode/l10n-dev validate ./l10n"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.2",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "ollama": "^0.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.73.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^11.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
