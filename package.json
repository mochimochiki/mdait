{
  "name": "mdait",
  "displayName": "mdait",
  "description": "マークダウンおよびCSVファイルの翻訳拡張機能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdait.syncHashes",
        "title": "Sync Markdown Section Hashes"
      },
      {
        "command": "mdait.trans",
        "title": "MD AIT: セクション翻訳を実行"
      }
    ],
    "configuration": {
      "title": "MD AIT",
      "properties": {
        "mdait.directories.source": {
          "type": "string",
          "default": "./content/en",
          "description": "翻訳元ディレクトリのパス（絶対パスまたはワークスペースからの相対パス）"
        },
        "mdait.directories.target": {
          "type": "string",
          "default": "./content/ja",
          "description": "翻訳先ディレクトリのパス（絶対パスまたはワークスペースからの相対パス）"
        },
        "mdait.files.extensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".md",
            ".csv"
          ],
          "description": "翻訳対象のファイル拡張子"
        },
        "mdait.files.includePattern": {
          "type": "string",
          "default": "**/*",
          "description": "翻訳対象のファイルパターン（glob形式）"
        },
        "mdait.files.excludePattern": {
          "type": "string",
          "default": "**/node_modules/**",
          "description": "翻訳対象から除外するファイルパターン（glob形式）"
        },
        "mdait.translation.provider": {
          "type": "string",
          "default": "default",
          "description": "翻訳プロバイダー（default: 組み込みの簡易翻訳）"
        },
        "mdait.translation.markdown.skipCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "マークダウン翻訳時にコードブロックを翻訳対象から除外するかどうか"
        },
        "mdait.translation.csv.delimiter": {
          "type": "string",
          "default": ",",
          "description": "CSV翻訳時のデリミタ（区切り文字）"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "biome lint ./src",
    "test": "rimraf out/test && npm run compile && npm run lint && vscode-test",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/markdown-it": "^14.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^11.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
