{
  "transPairs": [
    {
      "sourceLang": "ja",
      "sourceDir": "docs/ja",
      "targetLang": "en",
      "targetDir": "docs/en"
    }
  ],
  "ai": {
    "provider": "vscode-lm",
    "model": "gpt-5 mini"
  },
  "trans": {
    "contextSize": 1,
    "retryLimit": 1,
    "frontmatter": {
      "keys": ["title", "description"]
    }
  },
  "sync": {
    "level": 3,
    "autoSyncOnSave": true
  },
  "terms": {
    "primaryLang": "en"
  }
}
