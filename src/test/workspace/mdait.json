{
  "transPairs": [
    {
      "sourceLang": "ja",
      "sourceDir": "content/ja",
      "targetLang": "en",
      "targetDir": "content/en"
    }
  ],
  "ai": {
    "provider": "vscode-lm",
    "model": "gpt-5 mini",
    "debug": { "logPromptAndResponse": true },
    "ollama": {
      "endpoint": "http://localhost:11434",
      "model": "gemma3:4b"
    }
  },
  "trans": {
    "contextSize": 1,
    "retryLimit": 1,
    "frontmatter": {
      "keys": ["title", "description"]
    }
  },
  "sync": {
    "level": 3,
    "autoSyncOnSave": true
  },
  "terms": {
    "primaryLang": "en"
  }
}
