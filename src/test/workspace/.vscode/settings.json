{
  // 翻訳ペア
  "mdait.transPairs": [
    {
      "sourceLang": "ja",
      "sourceDir": "content/ja",
      "targetLang": "en",
      "targetDir": "content/en"
    },
    {
      "sourceLang": "en",
      "sourceDir": "content/en",
      "targetLang": "de",
      "targetDir": "content/de"
    }
  ],

  // -----------------------------------------------
  // General
  // -----------------------------------------------
  // 除外パターン
  "mdait.ignoredPatterns": "**/node_modules/**",

  // -----------------------------------------------
  // AI
  // -----------------------------------------------
  // AIプロバイダ(default/vscode-lm/ollama)
  "mdait.ai.provider": "vscode-lm",

  // AI model
  "mdait.ai.model": "gpt-4.1",

  // ollama endpoint
  "mdait.ai.ollama.endpoint": "http://localhost:11434",

  // ollama model
  "mdait.ai.ollama.model": "gemma3:4b",

  // -----------------------------------------------
  // Sync
  // -----------------------------------------------
  // マーカーを自動挿入する見出しレベル. FrontMatterで上書き可能(yamlのみ)
  "mdait.sync.autoMarkerLevel": 2,

  // 自動削除設定
  "mdait.sync.autoDelete": true,

  // -----------------------------------------------
  // trans
  // -----------------------------------------------
  // Markdown:コードブロックをスキップするか
  "mdait.trans.markdown.skipCodeBlocks": true,

  // -----------------------------------------------
  // term
  // -----------------------------------------------
  // 用語集ファイル名(default: terms.csv)
  "mdait.terms.filename": "terms.csv",

  // 用語管理の基準言語(default: en)
  //"mdait.terms.primaryLang": "en"

}
